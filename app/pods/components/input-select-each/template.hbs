<select class="form-control">
  {{#if selected}}
    {{#each data as |item|}}
      {{#if (eq selected.id item.id)}}
        <option value="{{item.id}}" selected>{{item.name}}</option>
      {{else}}
        <option value="{{item.id}}">{{item.name}}</option>
      {{/if}}
    {{/each}}
  {{else}}
    <option selected disabled>Selecione um Registro</option>
    {{#each data as |item|}}
      <option value="{{item.id}}">{{item.name}}</option>
    {{/each}}
  {{/if}}
</select>
