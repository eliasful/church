<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      {{#link-to 'home'}}
        Início
      {{/link-to}}
    </li>
    <li class="breadcrumb-item active" aria-current="page">Célula</li>
  </ol>
</nav>
<div class="row">
  <div class="col-lg-9 col-md-8">
    <h2>Células</h2>
    <p>Lista de todos as células da sua igreja</p>
  </div>
</div>

<div class="card">
  <div class="card-header card-header-options">
    <div class="row">
      <div class="col-md-4">
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="fa fa-search"></i>
            </span>
          </div>
          {{input type="text" class="form-control" placeholder="Pesquisar..." value=filter}}
        </div>
      </div>
      <div class="col-md-5"></div>
      <div class="col-md-3">
        {{#link-to 'group.new' class="btn btn-primary btn-block"}}
          <i class="fa fa-plus"></i> Adicionar Célula
        {{/link-to}}
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Lider</th>
            <th class="text-center">Celular Lider</th>
            <th>Endereço</th>
            <th>Co-Lider</th>
            <th class="text-center">Membros</th>
            <th class="text-right">Ações</th>
          </tr>
        </thead>
        <tbody>
          {{#each model as |item|}}
            <tr>
              <td class="align-middle">{{item.name}}</td>
              <td class="align-middle">{{item.leader.name}}</td>
              <td class="align-middle text-center">
                {{label-mask value=item.leader.celPhone mask="(99) 9 9999-9999"}}
              </td>
              <td class="align-middle">
                {{item.addressComplete}}
              </td>
              <td>{{item.coleader.name}}</td>
              <td class="text-center">{{item.members.length}}</td>
              <td class="text-right align-middle">
                {{#link-to 'group.edit' item  class="btn btn-outline-dark btn-sm"}}
                  <i class="fa fa-edit"></i>
                {{/link-to}}
                <button {{action 'remove' item}} type="button" class="btn btn-outline-danger btn-sm">
                  <i class="fa fa-trash"></i>
                </button>
              </td>
            </tr>
          {{else}}
            <tr>
              <td colspan="10" class="text-center">Nenhum Registro Encontrado</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
