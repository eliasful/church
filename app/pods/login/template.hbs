<div class="login-background">
  <div class="login-content">
    {{!-- <div class="background-image"></div> --}}
    <div class="login-container login-portal">
      <div class="login-logo">
        <br /><br />
      </div>
      <form id="loginForm" {{action 'authenticate' on='submit'}} class="form-signin form floating-label" style="background-color: #f1f2f2!important">
        <div class="form-group text-center">
          {{input type="text" class="form-control text-center" value=identification required=true autofocus=true}}
          <label id="usernameLabel" for="username">CPF ou E-mail</label>
        </div>
        <div class="form-group text-center">
          {{input type="password" class="form-control text-center" value=password required=true}}
          <label id="passwordLabel" for="password"></label>
        </div>
        <div class="row">
          <div class="col-xs-12 text-center">
            <button type="submit" class="login btn btn-primary btn-loading-state" data-loading-text="<i class='fa fa-spinner fa-spin'></i> Efetuando Login">ENTRAR</button>
          </div>

          <div class="col-xs-12 small-padding text-center">
            <a href="#" data-dismiss="modal">
            </a>
          </div>


        </div>
      </form>
      <div class="login-bottom">
        {{!-- <span>{{t "login.a.solution"}}</span> --}}
      </div>
    </div>
  </div>
</div>
